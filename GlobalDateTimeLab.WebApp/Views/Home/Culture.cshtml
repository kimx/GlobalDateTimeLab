@model GlobalDateTimeLab.WebApp.Models.CultureModel
@{
    ViewBag.Title = "Culture";
}

<h2>Culture-TimezoneHour:@Model.TimezoneHour</h2>
<h4>@Model.CurrentCultureDateTime</h4>
@using (@Html.BeginForm())
{
    <div class="form-inline">
        @Html.DropDownListFor(model => model.TimezoneHour,
                     new SelectList(new List<SelectListItem>
    {
      new SelectListItem { Text = "UTC" , Value = "0"},
      new SelectListItem { Text = "South Africa", Value = "2" },
      new SelectListItem { Text = "Dubai", Value = "4" },
      new SelectListItem { Text = "Taiwan", Value = "8" }
    },
    "Value", // property to be set as Value of dropdown item
    "Text",  // property to be used as text of dropdown item
    @Model.TimezoneHour), // value that should be set selected of dropdown
     new { @class = "form-control" })
        <button type="submit" class="btn btn-default">Change</button>
    </div>
    <ul>
        @foreach(var m in Model.Messages)
        {
            <li>@m</li>
        }
    </ul>

}

